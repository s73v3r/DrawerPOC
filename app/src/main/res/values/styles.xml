<resources>

    <style name="None">

    </style>

    <!-- Base application theme. -->
    <style name="Theme.POC" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/content_background</item>
        <item name="android:progressBarStyle">@style/Widget.POC.ProgressBar</item>
    </style>

    <style name="Widget.POC.ProgressBar" parent="None">
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">900</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

</resources>
